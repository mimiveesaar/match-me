{
  "include": [
    "src/**/*",
    "style"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "paths": {
      "@atoms": [
        "./src/atoms"
      ],
      "@atoms/*": [
        "./src/atoms/*"
      ],
      "@molecules": [
        "./src/molecules"
      ],
      "@molecules/*": [
        "./src/molecules/*"
      ],
      "@organisms": [
        "./src/organisms"
      ],
      "@organisms/*": [
        "./src/organisms/*"
      ],
      "@templates": [
        "./src/templates"
      ],
      "@templates/*": [
        "./src/templates/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  }
}